<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxci.zhangfugang.dao.BookDao">
    <select id="query" resultType="com.hxci.zhangfugang.pojo.Book">
        select * from book
    </select>
    <insert id="save">
        insert into book (name,price,publisher) values (#{name},#{price},#{publisher})
    </insert>
    <delete id="del">
        delete from book where id=#{id}
    </delete>
    <select id="edit" resultType="com.hxci.zhangfugang.pojo.Book">
        select * from book where id=#{id}
    </select>
    <update id="update">
        update book set name=#{name},price=#{price},publisher=#{publisher} where id=#{id}
    </update>
</mapper>